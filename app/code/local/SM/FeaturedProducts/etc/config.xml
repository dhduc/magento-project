        <models>
            <sm_featuredproducts>
                <class>SM_FeaturedProducts_Model</class>
                <resourceModel>sm_featuredproducts_resource</resourceModel>
            </sm_featuredproducts>
            <sm_featuredproducts_resource>
                <class>SM_FeaturedProducts_Model_Resource</class>
            </sm_featuredproducts_resource>
        </models>
        <blocks>
            <sm_featuredproducts>
                <class>SM_FeaturedProducts_Block</class>
            </sm_featuredproducts>
        </blocks>
        <helpers>
            <sm_featuredproducts>
                <class>SM_FeaturedProducts_Helper</class>
            </sm_featuredproducts>
        </helpers>
        <resources>
            <sm_featuredproducts_setup>
                <setup>
                    <module>SM_FeaturedProducts</module>
                    <class>SM_FeaturedProducts_Model_Resource_Setup</class>
                </setup>
            </sm_featuredproducts_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <sm_featuredproducts>
                    <file>featuredproducts/frontend.xml</file>
                </sm_featuredproducts>
            </updates>
        </layout>
    </frontend>
